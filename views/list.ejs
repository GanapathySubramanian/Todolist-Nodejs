<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach((items) => { %>
      <form action="/delete" method="post" >
          <div class="item">
            <input type="checkbox" name="checkbox_item" value="<%= items._id %>" onchange="this.form.submit()">
            <input type="hidden" name="checkbox_list" value="<%= listTitle %>">
            <p><%=  items.name  %></p>
          </div>
      </form>
    <%});%>
    
      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
